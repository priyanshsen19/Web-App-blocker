<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.codewithcoffee.cysapp.ChatUI"
    android:background="@drawable/home_back">

    <ImageView
        android:id="@+id/rv_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allusersbg"
        app:srcCompat="@drawable/fui_idp_button_background_google" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allusersbg" />

    <ImageButton
        android:id="@+id/allusersbg"
        android:layout_width="277dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/community_bg" />

    <TextView
        android:id="@+id/overview_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Users Chat"
        android:textColor="@color/textcolor_black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/allusersbg"
        app:layout_constraintEnd_toEndOf="@+id/allusersbg"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/allusersbg"
        app:layout_constraintTop_toTopOf="@+id/allusersbg" />

</androidx.constraintlayout.widget.ConstraintLayout>