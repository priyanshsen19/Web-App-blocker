<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.codewithcoffee.cysapp.AboutUs"
    android:background="@drawable/home_back">


    <ImageView
        android:id="@+id/aboutus"
        android:layout_width="369dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/about_us" />

    <ImageView
        android:id="@+id/whoweare"
        android:layout_width="260dp"
        android:layout_height="270dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="22dp"
        android:scaleX="1.25"
        android:scaleY="1.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutus"
        app:srcCompat="@drawable/who_we_are" />

    <ImageView
        android:id="@+id/whatwedo"
        android:layout_width="371dp"
        android:layout_height="300dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="37dp"
        android:scaleX="1.25"
        android:scaleY="1.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whoweare"
        app:srcCompat="@drawable/what_we_do" />
</androidx.constraintlayout.widget.ConstraintLayout>